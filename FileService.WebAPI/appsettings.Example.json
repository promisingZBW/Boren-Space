{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:7292"
      }
    }
  },
  "DefaultDB": {
    "ConnStr": "Server=YOUR_SERVER;Database=ELWebDB;User Id=YOUR_USERNAME;Password=YOUR_PASSWORD;TrustServerCertificate=true;",
    "_comment": "开发环境可使用: Server=.;Database=ELWebDB;Integrated Security=true;TrustServerCertificate=true;"
  },
  "JWT": {
    "SecretKey": "必须与IdentityService中的JWT密钥完全相同",
    "Issuer": "ELWeb",
    "Audience": "ELWebUsers",
    "ExpireSeconds": 86400
  },
  "Storage": {
    "Local": {
      "RootPath": "D:\\FileStorage\\Local",
      "BaseUrl": "http://localhost:7292/files",
      "Enabled": true,
      "_comment": "本地存储路径，确保该目录存在且有写入权限"
    },
    "AwsS3": {
      "BucketName": "your-bucket-name",
      "Region": "ap-southeast-2",
      "AccessKeyId": "YOUR_AWS_ACCESS_KEY_ID",
      "SecretAccessKey": "YOUR_AWS_SECRET_ACCESS_KEY",
      "Enabled": false,
      "ForcePathStyle": false,
      "_comment": "如果使用 AWS S3，请设置 Enabled 为 true 并填写实际凭证"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "_instructions": {
    "step1": "复制此文件为 appsettings.Development.json",
    "step2": "选择存储方式：Local（本地）或 AwsS3（云存储）",
    "step3": "如果使用 AWS S3，需要配置 Bucket Policy 允许公开读取",
    "step4": "AWS Region 推荐使用 ap-southeast-2 (Sydney，离新西兰最近)"
  }
}

