{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:7109"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DefaultDB": {
    "ConnStr": "Server=YOUR_SERVER;Database=ELWebDB;User Id=YOUR_USERNAME;Password=YOUR_PASSWORD;TrustServerCertificate=true;",
    "_comment": "开发环境可使用: Server=.;Database=ELWebDB;Integrated Security=true;TrustServerCertificate=true;"
  },
  "JWT": {
    "SecretKey": "必须与IdentityService中的JWT密钥完全相同",
    "Issuer": "ELWeb",
    "Audience": "ELWebUsers",
    "ExpireSeconds": 3600,
    "_comment": "Audience 必须与 IdentityService 保持一致，否则认证会失败！"
  },
  "_instructions": {
    "step1": "复制此文件为 appsettings.Development.json",
    "step2": "填写实际的数据库连接字符串",
    "step3": "确保 JWT 配置与 IdentityService 完全一致"
  }
}

